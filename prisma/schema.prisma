// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  cpf       String   @unique
  name      String
  email     String   @unique
  password  String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  Account   Account?
}

model Account {
  id        String   @id @default(cuid())
  userId    String
  isActive  Boolean
  User      User     @relation(fields: [userId, isActive], references: [id, isActive])
  balance   Float
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}
